generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model Article {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  title     String
  imageUrl  String
  date      DateTime
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
